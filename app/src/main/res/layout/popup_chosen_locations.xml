<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.noavaran.system.vira.baryab.customviews.CustomTextView
        android:id="@+id/puChosenLocations_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/view_rectangle_background_transparent_border_light_grey_no_corners"
        android:gravity="center"
        android:text="لیست محل های انتخاب شده"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/blue_800"
        app:tvCustomFont="@string/baseFont"/>

    <com.noavaran.system.vira.baryab.customviews.CustomTextView
        android:id="@+id/puChosenLocations_btnDismiss"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black_text_secondary"
        app:tvCustomFont="@string/baseTextIconFont" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/puChosenLocation_rvChosenLocations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/puChosenLocations_tvTitle"
        android:scrollbars="vertical"/>

</RelativeLayout>