<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:mContext="baryab.motesadi.activities.CrashActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_above="@+id/acCrash_tvDescription"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_exception"/>

    <baryab.motesadi.customviews.CustomTextView
        android:id="@+id/acCrash_tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:text="با عرض پوزش یک خطای غیر منتظره در برنامه رخ داده است، گزارش خطا به سرور جهت بررسی و رفع آن توسط متخصصین ارسال گردید. \n\nباتشکر از صبر و بردباری شما"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        app:tvCustomFont="@string/baseFont"/>

    <baryab.motesadi.customviews.CustomTextView
        android:id="@+id/acCrash_btnRestartApp"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/acCrash_tvDescription"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingTop="2dp"
        android:background="@drawable/button_selector_2"
        android:clickable="true"
        android:gravity="center"
        android:text="اجرای مجدد برنامه"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        app:tvCustomFont="@string/baseFont"/>

</RelativeLayout>
