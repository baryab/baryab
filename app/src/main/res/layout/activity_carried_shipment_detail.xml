<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.noavaran.system.vira.baryab.activities.CarriedShipmentDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/acCarriedShipmentDetail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorAccent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.noavaran.system.vira.baryab.customviews.CustomTextView
                android:id="@+id/acCarriedShipmentDetail_tvGap"
                android:layout_width="@dimen/toolbar_icon_view_width"
                android:layout_height="@dimen/toolbar_icon_view_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/_10sdp"
                android:clickable="false"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_icon_text_size"
                app:tvCustomFont="@string/baseTextIconFont" />

            <com.noavaran.system.vira.baryab.customviews.CustomTextView
                android:id="@+id/acCarriedShipmentDetail_tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/acCarriedShipmentDetail_btnBack"
                android:layout_toRightOf="@+id/acCarriedShipmentDetail_tvGap"
                android:layout_alignTop="@+id/acCarriedShipmentDetail_tvGap"
                android:layout_alignBottom="@+id/acCarriedShipmentDetail_tvGap"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:paddingTop="@dimen/_2sdp"
                android:text="نوع ماشین"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_title_text_size"
                android:textStyle="bold"
                app:tvCustomFont="@string/baseFont"/>

            <com.noavaran.system.vira.baryab.customviews.CustomTextView
                android:id="@+id/acCarriedShipmentDetail_btnBack"
                android:layout_width="@dimen/toolbar_icon_view_width"
                android:layout_height="@dimen/toolbar_icon_view_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/acCarriedShipmentDetail_tvGap"
                android:layout_alignBottom="@+id/acCarriedShipmentDetail_tvGap"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/toolbar_icon_text_size"
                android:textColor="@color/white"
                app:tvCustomFont="@string/baseTextIconFont" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/acCarriedShipmentDetail_dropShadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_drop_shadow_height"
        android:layout_below="@+id/acCarriedShipmentDetail_toolbar"
        android:background="@drawable/toolbar_dropshadow" />

    <ImageView
        android:id="@+id/acCarriedShipmentDetail_ivDriverPhoto"
        android:layout_width="@dimen/_72sdp"
        android:layout_height="@dimen/_72sdp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/acCarriedShipmentDetail_dropShadow"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:scaleType="fitXY"
        android:src="@drawable/ic_no_image_found" />

    <com.noavaran.system.vira.baryab.customviews.CustomTextView
        android:id="@+id/acCarriedShipmentDetail_rbDriverName"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_below="@+id/acCarriedShipmentDetail_dropShadow"
        android:layout_toLeftOf="@+id/acCarriedShipmentDetail_ivDriverPhoto"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingRight="@dimen/padding_small"
        android:gravity="center|right"
        android:lines="1"
        android:maxLines="1"
        android:text="نام راننده"
        android:textColor="@color/white_text_secondary"
        android:textSize="@dimen/text_size_medium"
        app:tvCustomFont="@string/baseFont" />

    <RelativeLayout
        android:id="@+id/acCarriedShipmentDetail_rlDriverRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acCarriedShipmentDetail_dropShadow"
        android:layout_alignTop="@+id/acCarriedShipmentDetail_rbDriverName"
        android:layout_alignBottom="@+id/acCarriedShipmentDetail_rbDriverName"
        android:layout_toLeftOf="@+id/acCarriedShipmentDetail_rbDriverName"
        android:layout_marginLeft="@dimen/margin_small">

        <RatingBar
            android:id="@+id/acCarriedShipmentDetail_rbDriverRating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:numStars="5"
            android:progressBackgroundTint="@color/grey_500"
            android:progressTint="#fbbc0c"
            android:rating="1"
            android:secondaryProgressTint="@color/grey_500"
            android:secondaryProgressTintMode="src_atop"
            android:stepSize="1.0" />

    </RelativeLayout>

    <com.noavaran.system.vira.baryab.customviews.CustomTextView
        android:id="@+id/acCarriedShipmentDetail_tvDriverCarType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_24sdp"
        android:layout_below="@+id/acCarriedShipmentDetail_rbDriverName"
        android:layout_toLeftOf="@+id/acCarriedShipmentDetail_ivDriverPhoto"
        android:layout_marginLeft="@dimen/margin_small"
        android:paddingRight="@dimen/padding_small"
        android:lines="1"
        android:maxLines="1"
        android:text="نوع ماشین"
        android:textColor="@color/white_text_secondary"
        android:textSize="@dimen/text_size_medium"
        app:tvCustomFont="@string/baseFont" />

    <com.noavaran.system.vira.baryab.customviews.CustomTextView
        android:id="@+id/acCarriedShipmentDetail_tvDriverCarDetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_24sdp"
        android:layout_below="@+id/acCarriedShipmentDetail_tvDriverCarType"
        android:layout_toLeftOf="@+id/acCarriedShipmentDetail_ivDriverPhoto"
        android:layout_toRightOf="@+id/acCarriedShipmentDetail_rlPlateLicense"
        android:layout_alignTop="@+id/acCarriedShipmentDetail_rlPlateLicense"
        android:layout_alignBottom="@+id/acCarriedShipmentDetail_rlPlateLicense"
        android:layout_marginLeft="@dimen/margin_small"
        android:paddingRight="@dimen/padding_small"
        android:gravity="center|right"
        android:lines="1"
        android:maxLines="1"
        android:text="طول 5.7 عرض 2.3 ارتفاع 12.5"
        android:textColor="@color/white_text_secondary"
        android:textSize="@dimen/text_size_small"
        app:tvCustomFont="@string/baseFont" />

    <RelativeLayout
        android:id="@+id/acCarriedShipmentDetail_rlPlateLicense"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/acCarriedShipmentDetail_ivDriverPhoto"
        android:layout_below="@+id/acCarriedShipmentDetail_tvDriverCarType"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_small"
        android:background="@color/black">

        <RelativeLayout
            android:id="@+id/rlIranFlagLayout"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:background="#02218d">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_flag_iran" />

            <com.noavaran.system.vira.baryab.customviews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvIranText"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:text="I.R."
                android:textColor="@color/white"
                android:textSize="@dimen/_3sdp" />

            <com.noavaran.system.vira.baryab.customviews.CustomTextView
                android:id="@+id/tvIranText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:text="IRAN"
                android:textColor="@color/white"
                android:textSize="@dimen/_3sdp" />

        </RelativeLayout>

        <com.noavaran.system.vira.baryab.customviews.CustomTextView
            android:id="@+id/acCarriedShipmentDetail_tvPlateLicenseNumber"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_toRightOf="@+id/rlIranFlagLayout"
            android:background="#edce01"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_tiny"
            app:tvCustomFont="@string/baseFont" />

        <RelativeLayout
            android:id="@+id/rlIranTextLayout"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_toRightOf="@+id/acCarriedShipmentDetail_tvPlateLicenseNumber"
            android:background="#edce01"
            android:padding="@dimen/_2sdp">

            <com.noavaran.system.vira.baryab.customviews.CustomTextView
                android:id="@+id/tvIranTextLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:text="ایـران"
                android:textColor="@color/black"
                android:textSize="@dimen/_2sdp"
                app:tvCustomFont="@string/baseFont" />

            <com.noavaran.system.vira.baryab.customviews.CustomTextView
                android:id="@+id/acCarriedShipmentDetail_tvPlateLicenseIranNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvIranTextLabel"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp"
                app:tvCustomFont="@string/baseFont" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/acCarriedShipmentDetail_rlDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/acCarriedShipmentDetail_ivDriverPhoto"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@color/colorAccent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/acCarriedShipmentDetail_rlDivider"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.gms.maps.MapView
                android:id="@+id/acCarriedShipmentDetail_mapView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:apiKey="@string/google_maps_key" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/acCarriedShipmentDetail_mapView"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small">

                <ImageView
                    android:id="@+id/acCarriedShipmentDetail_ivShipmentPhoto"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_no_image_found" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/acCarriedShipmentDetail_ivShipmentPhoto"
                    android:layout_alignTop="@+id/acCarriedShipmentDetail_ivShipmentPhoto"
                    android:layout_toRightOf="@+id/acCarriedShipmentDetail_ivShipmentPhoto">

                    <com.noavaran.system.vira.baryab.customviews.CustomTextView
                        android:id="@+id/acCarriedShipmentDetail_btnRequestAgain"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/button_selector_2"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="درخواست مجدد"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_tiny"
                        app:tvCustomFont="@string/baseFont" />

                </RelativeLayout>

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_tvRegisterLoadingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_ivShipmentPhoto"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:gravity="right"
                    android:text="زمان ثبت بار"
                    android:textColor="@color/white_text_secondary"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_etRegisterLoadingDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_ivShipmentPhoto"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_toLeftOf="@+id/acCarriedShipmentDetail_tvRegisterLoadingDate"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_tvLoadingType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvRegisterLoadingDate"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="right"
                    android:text="نوع بار"
                    android:textColor="@color/white_text_secondary"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_etLoadingType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvRegisterLoadingDate"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toLeftOf="@+id/acCarriedShipmentDetail_tvLoadingType"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_tvLoadingWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvLoadingType"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="right"
                    android:text="وزن"
                    android:textColor="@color/white_text_secondary"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_etLoadingWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvLoadingType"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toLeftOf="@+id/acCarriedShipmentDetail_tvLoadingWeight"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_tvCarType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvLoadingWeight"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="right"
                    android:text="نوع ماشین"
                    android:textColor="@color/white_text_secondary"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_etCarType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvLoadingWeight"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toLeftOf="@+id/acCarriedShipmentDetail_tvCarType"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_tvCarProperLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvCarType"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="right"
                    android:text="طول مناسب"
                    android:textColor="@color/white_text_secondary"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_etCarProperLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvCarType"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toLeftOf="@+id/acCarriedShipmentDetail_tvCarProperLength"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_tvCarProperWidth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvCarProperLength"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="right"
                    android:text="عرض مناسب"
                    android:textColor="@color/white_text_secondary"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_etCarProperWidth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvCarProperLength"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toLeftOf="@+id/acCarriedShipmentDetail_tvCarProperWidth"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_tvCarProperHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvCarProperWidth"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="right"
                    android:text="ارتفاع مناسب"
                    android:textColor="@color/white_text_secondary"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_etCarProperHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvCarProperWidth"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toLeftOf="@+id/acCarriedShipmentDetail_tvCarProperHeight"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_tvLoadingFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvCarProperHeight"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="right"
                    android:text="کرایه بار"
                    android:textColor="@color/white_text_secondary"
                    android:textSize="@dimen/text_size_medium"
                    app:tvCustomFont="@string/baseFont" />

                <com.noavaran.system.vira.baryab.customviews.CustomTextView
                    android:id="@+id/acCarriedShipmentDetail_tvLoadingFareHint"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/acCarriedShipmentDetail_tvLoadingFare"
                    android:layout_below="@+id/acCarriedShipmentDetail_tvCarProperHeight"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_toLeftOf="@+id/acCarriedShipmentDetail_tvLoadingFare"
                    android:gravity="right"
                    android:text="(صافی)"
                    android:textColor="@color/blue_500"
