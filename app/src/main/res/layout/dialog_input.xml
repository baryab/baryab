<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dgInput_rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <baryab.motesadi.customviews.CustomTextView
            android:id="@+id/dgInput_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_small"
            android:gravity="center|right"
            android:text="عنوان"
            android:textColor="@color/blue_800"
            android:textSize="@dimen/text_size_medium"
            app:tvCustomFont="@string/baseFont" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dgInput_rlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dgInput_rlToolbar"
        android:padding="@dimen/padding_small">

        <baryab.motesadi.customviews.CustomEditText
            android:id="@+id/dgInput_etUserInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:gravity="center|right"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="3"
            android:hint="متن خود را وارد نمایید"
            android:textColorHint="@color/black_text_disabled"
            android:text=""
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/black"
            app:backgroundTint="@color/blue_200"
            app:etCustomFont="@string/baseFont"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dgInput_rlButtons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/dgInput_rlContainer">

        <baryab.motesadi.customviews.CustomTextView
            android:id="@+id/dgInput_btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_medium"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:paddingRight="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_small"
            android:background="?android:attr/selectableItemBackground"
            android:text="تایید"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/blue_700"
            app:tvCustomFont="@string/baseFont"/>

        <baryab.motesadi.customviews.CustomTextView
            android:id="@+id/dgInput_btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/dgInput_btnConfirm"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:paddingRight="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_small"
            android:background="?android:attr/selectableItemBackground"
            android:text="انصراف"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/blue_700"
            app:tvCustomFont="@string/baseFont"/>

    </RelativeLayout>

</RelativeLayout>