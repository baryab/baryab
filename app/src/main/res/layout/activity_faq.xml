<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:noghteh="http://noghteh.ir"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:mContext="baryab.motesadi.activities.FaqActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/acFaq_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="?attr/colorAccent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <baryab.motesadi.customviews.CustomTextView
                android:id="@+id/acFaq_btnBack"
                android:layout_width="@dimen/toolbar_icon_view_width"
                android:layout_height="@dimen/toolbar_icon_view_height"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/margin_small"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_icon_text_size"
                app:tvCustomFont="@string/baseTextIconFont" />

            <baryab.motesadi.customviews.CustomTextView
                android:id="@+id/acFaq_tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/acFaq_btnBack"
                android:layout_alignTop="@+id/acFaq_btnBack"
                android:layout_alignBottom="@+id/acFaq_btnBack"
                android:layout_marginRight="@dimen/margin_small"
                android:paddingTop="@dimen/_4sdp"
                android:gravity="center|right"
                android:text="سوالات متداول"
                android:textColor="@color/white"
                android:textSize="@dimen/toolbar_title_text_size"
                app:tvCustomFont="@string/baseFont" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acFaq_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <baryab.motesadi.customviews.CustomTextView
                android:id="@+id/acFaq_tvFAQ1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                android:lines="1"
                android:maxLines="1"
                android:text="چند نکته قابل توجه رانندگان:"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/blue_500"
                app:tvCustomFont="@string/baseFont"/>

            <baryab.motesadi.customviews.JustifiedTextView
                android:id="@+id/acFaq_tvFAQ2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acFaq_tvFAQ1"
                android:layout_marginTop="@dimen/margin_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                noghteh:text="1.در صورت بروز خسارت و حادثه حتما با متصدی حمل هماهنگ شوید و در صورت عدم دسترسی جهت اخذ کروکی و گزارش از مراجع قضائی و کارشناسی بیمه و انتقال محموله به نزدیک ترین مکان امن اقدام نمایید."
                noghteh:textColor="@color/white"
                noghteh:textSize="@dimen/text_size_medium"
                app:tvCustomFont="@string/baseFont"/>

            <baryab.motesadi.customviews.JustifiedTextView
                android:id="@+id/acFaq_tvFAQ3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acFaq_tvFAQ2"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                noghteh:text="2. قبل از خروج از دفتر . محل بارگیری. تخلیه یا .... حتما مدارک خود را بازرسی نمایید."
                noghteh:textColor="@color/white"
                noghteh:textSize="@dimen/text_size_medium"
                app:tvCustomFont="@string/baseFont"/>

            <baryab.motesadi.customviews.JustifiedTextView
                android:id="@+id/acFaq_tvFAQ4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acFaq_tvFAQ3"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                noghteh:text=".3.واسط بین راننده .شرکت حمل و نقل و صاحبان کالا بارنامه ثبتی میباشد"
                noghteh:textColor="@color/white"
                noghteh:textSize="@dimen/text_size_medium"
                app:tvCustomFont="@string/baseFont"/>

            <baryab.motesadi.customviews.JustifiedTextView
                android:id="@+id/acFaq_tvFAQ5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acFaq_tvFAQ4"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                noghteh:text="4. برای پرداخت هرگونه وجه با هر عنوانی حتما رسید دریافت کنید."
                noghteh:textColor="@color/white"
                noghteh:textSize="@dimen/text_size_medium"
                app:tvCustomFont="@string/baseFont"/>

            <baryab.motesadi.customviews.JustifiedTextView
                android:id="@+id/acFaq_tvFAQ6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acFaq_tvFAQ5"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                noghteh:text="45.جهت دریافت کرایه پس از رسید ارائه بارنامه تمبردار و رسید شده الزامی می باشد."
                noghteh:textColor="@color/white"
                noghteh:textSize="@dimen/text_size_medium"
                app:tvCustomFont="@string/baseFont"/>

            <baryab.motesadi.customviews.JustifiedTextView
                android:id="@+id/acFaq_tvFAQ7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acFaq_tvFAQ6"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                noghteh:text="6.کشیدن چادر . نایلون . طناب و حفاظت از محصولات الزامی می باشد."
                noghteh:textColor="@color/white"
                noghteh:textSize="@dimen/text_size_medium"
                app:tvCustomFont="@string/baseFont"/>

            <baryab.motesadi.customviews.CustomTextView
                android:id="@+id/acFaq_tvFAQ8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acFaq_tvFAQ7"
                android:layout_marginTop="@dimen/margin_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                android:lines="1"
                android:maxLines="1"
                android:text="چند نکته قابل توجه رانندگان:"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/blue_500"
                app:tvCustomFont="@string/baseFont"/>

            <baryab.motesadi.customviews.JustifiedTextView
                android:id="@+id/acFaq_tvFAQ9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acFaq_tvFAQ8"
                android:layout_marginTop="@dimen/margin_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                noghteh:text="1. تحویل یا دریافت کالا حتما با حضور راننده انجام شود و رسید دریافت یا تحویل طبق تعداد یا وزن گرفته شود."
                noghteh:textColor="@color/white"
                noghteh:textSize="@dimen/text_size_medium"
                app:tvCustomFont="@string/baseFont"/>

            <baryab.motesadi.customviews.JustifiedTextView
                android:id="@+id/acFaq_tvFAQ10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acFaq_tvFAQ9"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                noghteh:text="2.از سپردن وجه نقد یا چک و محصولات برگشتی بدون هماهنگی متصدی حمل خوددداری کنید."
                noghteh:textColor="@color/white"
                noghteh:textSize="@dimen/text_size_medium"
                app:tvCustomFont="@string/baseFont"/>

            <baryab.motesadi.customviews.JustifiedTextView
                android:id="@+id/acFaq_tvFAQ11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acFaq_tvFAQ10"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                noghteh:text="3.هر مشکلی را قبل تسویه با رانندگان با متصدی حمل در جریان بگذارید."
                noghteh:textColor="@color/white"
                noghteh:textSize="@dimen/text_size_medium"
                app:tvCustomFont="@string/baseFont"/>

            <baryab.motesadi.customviews.JustifiedTextView
                android:id="@+id/acFaq_tvFAQ12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acFaq_tvFAQ11"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                noghteh:text="4.راننده حامل محصولات میباشد لطفا درخواست چیدمان بار یا موارد مشابه که خارج از وظایف رانندگان است نداشته باشید."
                noghteh:textColor="@color/white"
                noghteh:textSize="@dimen/text_size_medium"
                app:tvCustomFont="@string/baseFont"/>

            <baryab.motesadi.customviews.JustifiedTextView
                android:id="@+id/acFaq_tvFAQ13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acFaq_tvFAQ12"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:gravity="right"
                noghteh:text="5.در صورت بروز حادثه و خسارت در زمان تحویل و دریافت محصولات با نزدیک ترین شعب بیمه مربوطه و متصدی حمل تماس بگیرید"
                noghteh:textColor="@color/white"
                noghteh:textSize="@dimen/text_size_medium"
                app:tvCustomFont="@string/baseFont"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>